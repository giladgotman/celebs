<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/default_margin"
    android:paddingTop="@dimen/medium_margin"
    android:paddingEnd="@dimen/default_margin"
    tools:context=".presentation.creategame.ChooseTeamFragment">

    <TextView
        android:id="@+id/chooseTeamDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_team_title"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/teamRadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_margin"
        android:orientation="horizontal"
        android:textAlignment="viewStart"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseTeamDescription">

        <RadioButton
            android:id="@+id/radioButtonTeam1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:textAlignment="viewStart"
            tools:text="team1" />

        <RadioButton
            android:id="@+id/radioButtonTeam2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Team2"
            android:visibility="gone"
            app:layout_goneMarginEnd="0dp"
            android:textAlignment="viewStart"
            />

        <RadioButton
            android:id="@+id/radioButtonTeam3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Team3"
            android:visibility="gone"
            android:textAlignment="viewStart"
            />
    </RadioGroup>

    <ImageButton
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/default_margin"
        style="@style/NextButtonStyle"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
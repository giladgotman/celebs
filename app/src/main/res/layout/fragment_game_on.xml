<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.gggames.hourglass.presentation.creategame.GamesFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameTopSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="@dimen/default_margin"
        android:paddingBottom="@dimen/small_margin"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        >

        <com.gggames.hourglass.presentation.common.HourglassTimer
            android:id="@+id/hourglass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/tiny_margin"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.gggames.hourglass.presentation.PlayButton
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_button"
            android:background="@drawable/ripple_circular_dark"
            app:layout_constraintTop_toTopOf="@id/hourglass"
            app:layout_constraintBottom_toBottomOf="@id/hourglass"
            app:layout_constraintStart_toEndOf="@id/hourglass"
            android:layout_marginStart="@dimen/small_margin"
            />

    <TextView
        android:id="@+id/cardsAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="24"
        android:textSize="@dimen/small_text_size"
        app:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/ic_deck"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/infoSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameTopSection"
        android:layout_marginTop="@dimen/small_margin"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_gravity="top"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/roundInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:rotation="-4"
            android:translationY="7dp"
            >

            <TextView
                android:id="@+id/roundLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="@dimen/small_text_size"
                android:text="Round"
                app:layout_constraintStart_toStartOf="parent"
                app:fontFamily="@font/poppins_light"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/roundTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="@dimen/small_text_size"
                android:text="1"
                app:layout_constraintBaseline_toBaselineOf="@id/roundLabelTextView"
                app:layout_constraintStart_toEndOf="@id/roundLabelTextView"
                app:fontFamily="@font/poppins_light"
                android:layout_marginStart="@dimen/small_margin"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roundInfo"
            android:background="@drawable/card_background"
            >

            <TextView
                android:id="@+id/cardTextView"
                style="@style/CardTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="top"
                android:lines="3"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:paddingStart="50dp"
                android:paddingTop="30dp"
                android:paddingEnd="50dp"
                android:paddingBottom="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Putin the president of russia"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.gggames.hourglass.presentation.HourglassButton
            android:id="@+id/helpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_circular_dark"
            android:src="@drawable/ic_help_button"
            android:translationX="35dp"
            android:translationY="-90dp"
            app:layout_constraintStart_toStartOf="@id/cardLayout"
            app:layout_constraintTop_toBottomOf="@id/cardLayout" />


        <com.gggames.hourglass.presentation.HourglassButton
            android:id="@+id/correctButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_circular_dark"
            android:src="@drawable/ic_correct_button"
            android:translationX="-10dp"
            android:translationY="-90dp"
            app:layout_constraintEnd_toEndOf="@id/cardLayout"
            app:layout_constraintTop_toBottomOf="@id/cardLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingStart="@dimen/small_margin"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="@dimen/default_margin"
        >

        <View
            android:id="@+id/teamsRuler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teamsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"

            android:orientation="vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/section3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instructions_section3_title"
                android:textAppearance="@style/TextViewTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/section3round1Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/instructions_section3_round1_descriptions"
                android:textAppearance="@style/TextViewDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/section3Title" />

            <TextView
                android:id="@+id/section3round2Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instructions_section3_round2_descriptions"
                android:textAppearance="@style/TextViewDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/section3round1Description" />

            <TextView
                android:id="@+id/section3round3Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instructions_section3_round3_descriptions"
                android:textAppearance="@style/TextViewDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/section3round2Description" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>